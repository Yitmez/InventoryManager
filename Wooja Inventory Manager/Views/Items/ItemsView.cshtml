                <td>
                    @Html.DisplayFor(modelItem => item.LocalSale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastSeenOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentInv)
                </td>
