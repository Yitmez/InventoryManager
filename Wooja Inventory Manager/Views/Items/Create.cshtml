<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <!--         <div asp-validation-summary="ModelOnly" class="text-danger"></div> -->
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InternNo" class="control-label"></label>
                <input asp-for="InternNo" class="form-control" />
                <span asp-validation-for="InternNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div><span asp-validation-for="Name" class="text-danger"></span></div>

                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />

            </div>
            <div class="form-group input-validation-error">

                <label asp-for="SN" class="control-label"></label>
                <input asp-for="SN" class="form-control" />
                <span asp-validation-for="SN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConstructionYear" class="control-label"></label>
                <input asp-for="ConstructionYear" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="NetAmount" class="control-label"></label>
                <input asp-for="NetAmount" class="form-control" />

            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Sold" /> @Html.DisplayNameFor(model => model.Sold)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <!--    <input asp-for="Brand" class="form-control" />
        <select class="form-control" asp-for="Brand"
                asp-items="@ViewBag.BrandList">
        </select> -->

                <select name="brandId"
                        class="form-control"
                        asp-items="@ViewBag.BrandList">
                </select>


            </div>

            <div class="form-group">
                <label asp-for="SoldDate" class="control-label"></label>
                <!--  <input asp-for="SoldDate" class="form-control" id="datepicker"> -->
                <input asp-for="SoldDate" class="form-control" />


            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Reserved" /> @Html.DisplayNameFor(model => model.Reserved)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="LendOutAmount" class="control-label"></label>
                <input asp-for="LendOutAmount" class="form-control" />

            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LendOut" /> @Html.DisplayNameFor(model => model.LendOut)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="LendOutDate" class="control-label"></label>
                <input asp-for="LendOutDate" class="form-control" />

            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LocalSale" /> @Html.DisplayNameFor(model => model.LocalSale)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="LastSeenOn" class="control-label"></label>
                <input asp-for="LastSeenOn" class="form-control" />

            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CurrentInv" /> @Html.DisplayNameFor(model => model.CurrentInv)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
